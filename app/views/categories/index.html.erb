<h3>Categories</h3>
<br>
<hr>
<br>
<% @categories.each do |categ| %>
  <ul>
    <li>
      <p><%= categ.category_name %></p>
      <p> <%= link_to "View Category", category_path(categ) %> </p>
    </li>
  </ul>
<% end %>

<br>
<%= link_to 'Create Category', new_category_path %>
<br>
<%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
<br>
<hr>
<br>
<% @tasks_today.each do |task| %>
<ul>
  <li>
    <p> <%= task.task_name %> </p>
    <p> <%= task.description %> </p>
    <p> <%= task.due_date %> </p>
  </li>
</ul>
<% end %>

